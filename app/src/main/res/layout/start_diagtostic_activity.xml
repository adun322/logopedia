<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StartDiagnosticActivity">

    <ImageView
        android:id="@+id/return_arrow"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginStart="20dp"
        >


    </ImageView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тренировка"
        android:layout_marginStart="7dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/return_arrow"
        app:layout_constraintStart_toEndOf="@+id/return_arrow"
        app:layout_constraintTop_toTopOf="@+id/return_arrow" />

    <ImageButton
        android:id="@+id/start_diag"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="160dp"

        android:layout_height="160dp"
        android:layout_marginTop="156dp"
        android:background="@drawable/start_diag_button"

        android:backgroundTintMode="@color/black"
        android:contentDescription="pon"
        android:src="@drawable/start_diag_arrow"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

    </ImageButton>

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/textView6"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="@string/start_diag"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_diag" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/showall"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_marginBottom="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/gray"
        android:paddingHorizontal="56dp"
        android:text="Вернуться к теории"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:cornerRadius="1000dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/gray">
    </com.google.android.material.button.MaterialButton>


</androidx.constraintlayout.widget.ConstraintLayout>