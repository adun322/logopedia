<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiagnosticActivtiy">

    <ImageView
        android:id="@+id/return_arrow4"
        android:layout_width="12dp"
        android:layout_height="24dp"
        android:src="@drawable/baseline_arrow_back_ios_new_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="38dp"
        android:layout_marginStart="20dp"
        >


    </ImageView>

    <TextView
        android:id="@+id/diag_theader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Тренировка"
        android:layout_marginStart="7dp"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/return_arrow4"
        app:layout_constraintStart_toEndOf="@+id/return_arrow4"
        app:layout_constraintTop_toTopOf="@+id/return_arrow4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginStart="23dp"
        android:text="1 из 1"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diag_theader" />

    <include
        android:id="@+id/audio_test"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_width="355dp"
        android:layout_height="133dp"
        layout="@layout/saved_sound_item1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />



    <ImageButton
        android:id="@+id/micro"
        style="@style/Widget.Material3.Button.TextButton"
        android:layout_width="160dp"
        android:layout_marginTop="210dp"

        android:layout_height="160dp"
        android:background="@drawable/mic_button_inactive"

        android:backgroundTintMode="@color/black"
        android:contentDescription="pon"
        android:src="@drawable/mic"

        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7">

    </ImageButton>

    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/result_text"
        android:gravity="center"
        android:layout_width="200dp"
        android:layout_height="34dp"
        android:textStyle="bold"
        android:textSize="14sp"
        android:textColor="@color/gray"
        android:text="Прослушайте запись и повторите"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/micro" />

    <LinearLayout
        android:layout_marginTop="90dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result_text">

        <ImageButton
            android:id="@+id/arrow_back"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:contentDescription="pon"

            android:background="@drawable/grey_button"

            android:backgroundTintMode="@color/black"
            android:src="@drawable/baseline_arrow_back_24"

            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="10dp">

        </ImageButton>

        <ImageButton
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/next_arrow"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="4dp"
            android:background="@drawable/black_button"

            android:backgroundTintMode="@color/black"
            android:contentDescription="pon"
            android:src="@drawable/baseline_arrow_forward_24"

            android:textColor="@color/white">


        </ImageButton>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


